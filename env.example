# Passwort-Schutz für die gesamte Anwendung (optional)
# Wenn gesetzt, wird ein Login erforderlich
APP_PASSWORD=your_password_here

# Max. Seiten pro Kategorie beim Scraping (Standard: 3)
# Höhere Werte können zu längeren Scan-Zeiten führen und erhöhen das Risiko einer Sperrung
MAX_SCAN_PAGES=3

# Gemini AI API Key (optional - nur für KI-Fallback)
GEMINI_API_KEY=your_gemini_api_key_here

# eBay API Konfiguration (erforderlich für echte Preise)
EBAY_APP_ID=your_ebay_app_id_here
EBAY_CERT_ID=your_ebay_cert_id_here
EBAY_DEV_ID=your_ebay_dev_id_here

# eBay OAuth Token (für Browse API - optional)
EBAY_AUTH_TOKEN=your_ebay_auth_token_here

# eBay API Version: 'finding' oder 'browse' (Standard: finding)
EBAY_API_VERSION=finding

# eBay Site ID (77 = Deutschland)
EBAY_SITE_ID=77

# eBay API Rate Limiting (optional)
# Delay zwischen eBay API-Aufrufen in Millisekunden (Standard: 1000ms = 1 Sekunde)
# Höhere Werte reduzieren Rate-Limit-Fehler, machen Scans aber langsamer
EBAY_API_DELAY_MS=1000

