# ========================================
# PASSWORT-SCHUTZ
# ========================================

# Passwort-Schutz für die gesamte Anwendung (optional)
# Wenn gesetzt, wird ein Login erforderlich beim Öffnen der URL
APP_PASSWORD=your_password_here

# ========================================
# VINTED SCRAPING KONFIGURATION
# ========================================

# Max. Seiten pro Kategorie beim Scraping (Standard: 3)
# Höhere Werte können zu längeren Scan-Zeiten führen und erhöhen das Risiko einer Sperrung
MAX_SCAN_PAGES=3

# Max. Items pro Scan (optional, Standard: 0 = kein Limit)
# Empfohlen: 50-100 für Vercel Hobby Plan (10s Timeout), 100-200 für Pro Plan (60s Timeout)
# Setze auf 0 um alle Items zu verarbeiten (kann zu Timeouts führen bei vielen Items)
MAX_ITEMS_PER_SCAN=0

# ========================================
# GEMINI AI (optional)
# ========================================

# Gemini AI API Key (optional - nur für KI-Fallback)
GEMINI_API_KEY=your_gemini_api_key_here

# ========================================
# EBAY API KONFIGURATION
# ========================================

# eBay API Konfiguration (OAuth2 - erforderlich für echte Preise)
# Erhältlich von: https://developer.ebay.com/
# Unterstützt beide Varianten:
# - EBAY_CLIENT_ID / EBAY_CLIENT_SECRET (Standard)
# - EBAY_APP_ID / EBAY_CERT_ID (Alternative, für Kompatibilität)
EBAY_CLIENT_ID=your_ebay_client_id_here
EBAY_CLIENT_SECRET=your_ebay_client_secret_here
# Alternative (falls dein Projekt EBAY_CERT_ID verwendet):
# EBAY_CERT_ID=your_ebay_cert_id_here

# eBay Marketplace ID (Standard: EBAY_DE für Deutschland)
# Verfügbare IDs: EBAY_DE, EBAY_US, EBAY_GB, etc.
EBAY_MARKETPLACE_ID=EBAY_DE

# eBay API Rate Limiting (optional)
# Delay zwischen eBay API-Aufrufen in Millisekunden (Standard: 2000ms = 2 Sekunden)
EBAY_API_DELAY_MS=2000

# ========================================
# E-MAIL KONFIGURATION (für automatische Reports)
# ========================================

# Gmail-Adresse für den E-Mail-Versand
# Beispiel: deine.email@gmail.com
EMAIL_FROM=your_gmail_address@gmail.com

# Empfänger-E-Mail-Adresse für die Reports
# Kann identisch mit EMAIL_FROM sein
EMAIL_TO=recipient@example.com

# Gmail App-Passwort für E-Mail-Versand
# WICHTIG: Dies ist NICHT dein normales Gmail-Passwort!
# 
# So erstellst du ein Gmail App-Passwort:
# 1. Gehe zu https://myaccount.google.com/security
# 2. Aktiviere 2-Faktor-Authentifizierung (falls noch nicht aktiv)
# 3. Gehe zu https://myaccount.google.com/apppasswords
# 4. Wähle "App auswählen" -> "Andere (benutzerdefinierte Name)" -> z.B. "VintedHunter"
# 5. Klicke auf "Generieren"
# 6. Kopiere das 16-stellige Passwort (ohne Leerzeichen) hier ein
#
GMAIL_APP_PASSWORD=xxxx xxxx xxxx xxxx

# Minimaler ROI für E-Mail-Benachrichtigung (Standard: 150)
# Nur Deals mit ROI >= diesem Wert werden in der E-Mail angezeigt
MIN_ROI_EMAIL=150

